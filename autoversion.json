{
  "$schema": "https://raw.githubusercontent.com/Solcogito/AutoVersion/main/schema/autoversion-lite.schema.json",
  "project": "BuildStamp",
  "namespace": "Solcogito.BuildStamp",
  "versionFile": "version.json",
  "targets": [
    {
      "path": "src/BuildStamp/BuildStamp.csproj",
      "type": "csproj"
    }
  ],
  "rules": {
    "defaultBump": "patch",
    "syncVersionTag": true,
    "tagPrefix": "v",
    "commitMessage": "Bump version to v{version} via AutoVersion"
  }
}
